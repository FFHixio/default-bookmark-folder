{
  "root": true,
  "parserOptions": {
    "ecmaVersion": 2017
  },
  "extends": [
    "airbnb-base",
    "prettier"
  ],
  "plugins": [
    "prettier"
  ],
  "env": {
    "es6": true,
    "browser": true,
    "webextensions": true,
    "mocha": true 
  },
  "rules": {
    "strict": "off",
    "linebreak-style": "off",
    "no-undef": "off",
    "no-unused-vars": "off",
    "class-methods-use-this": "off",
    "no-underscore-dangle": ["error", { "allowAfterThis": true }],
    "prettier/prettier": "error"
  }
}
